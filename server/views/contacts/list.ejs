<%- include('../partials/header.ejs') -%> 
<%- include('../partials/main_nav.ejs') -%>

    <!-- Main Content-->
    <main class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1>

                <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/contacts-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Contacts
                </a>
                <% } %>

                <br>
                <table class="table table-bordered table-striped table-hover">
                    <!-- Header Row-->
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <th class="text-center col-4">Name</th>
                            <th class="text-center col-4">Number</th>
                            <th class="text-center col-4">Email</th>
                            <th class="text-center col-4">Edit</th>
                            <th class="text-center col-4">Delete</th>
                        <% } else { %>
                            <th class="text-center col-4">Name</th>
                            <th class="text-center col-4">Number</th>
                            <th class="text-center col-4">Email</th>
                        <% } %>
                    </tr>
                    <!-- Repeatable Template Row-->
                    <% for(let count = 0; count< ContactsList.length; count++) { %> 
                       <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-4"><%= ContactsList[count].name %></td>
                            <td class="text-center col-4"><%= ContactsList[count].number%></td>
                            <td class="text-center col-4"><%= ContactsList[count].email %></td>
                            <td class="text-center col-4">
                                <a href="/contacts-list/edit/<%= ContactsList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i>Edit</a>                          
                            </td>
                            <td class="text-center col-4">
                                <a href="/contacts-list/delete/<%= ContactsList[count]._id %>" class="btn.btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>Delete</a>
                            </td>
                        <% } else { %>
                            <td class="text-center col-4"><%= ContactsList[count].name %></td>
                            <td class="text-center col-4"><%= ContactsList[count].number%></td>
                            <td class="text-center col-4"><%= ContactsList[count].email %></td>
                        <% } %>
                       </tr> 
                    
                    <% } %>
                
                </table>
            </div>
        </div>
    </main>

    <%- include('../partials/bottom_nav.ejs') -%> 
    <%- include('../partials/footer.ejs') -%>
